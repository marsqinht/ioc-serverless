{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "es2018", "DOM"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
